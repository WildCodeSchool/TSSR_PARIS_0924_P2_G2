# Fonction pour vérifier le mot de passe
function Verify-Password {
    $password = "monMotDePasse" # Mot de passe défini
    $inputPassword = Read-Host -Prompt "Entrez le mot de passe" -AsSecureString
    $inputPasswordPlain = [Runtime.InteropServices.Marshal]::PtrToStringAuto([Runtime.InteropServices.Marshal]::SecureStringToBSTR($inputPassword))

    return $inputPasswordPlain -eq $password
}

while ($true) {
    Clear-Host
    Write-Host "=== Menu Principal YAGO ==="
    Write-Host "1. Choix utilisateur"
    Write-Host "2. Choix ordinateur client"
    Write-Host "3. Quitter"
    
    $choix = Read-Host -Prompt "Sélectionnez une option (1, 2 ou 3)"
    
    switch ($choix) {
        1 {
            Write-Host "Vous avez choisi : Choix utilisateur"
            if (Verify-Password) {
                Write-Host "Accès accordé à l'utilisateur."
                # Ajouter les actions pour l'utilisateur ici.
            } else {
                Write-Host "Accès refusé."
            }
        }
        2 {
            Write-Host "Vous avez choisi : Choix ordinateur client"
            if (Verify-Password) {
                Write-Host "Accès accordé à l'ordinateur client."
                # Ajouter les actions pour l'ordinateur client ici.
            } else {
                Write-Host "Accès refusé."
            }
        }
        3 {
            Write-Host "Vous avez choisi de quitter le programme."
            exit 0
        }
        default {
            Write-Host "Option invalide. Veuillez sélectionner 1, 2 ou 3."
        }
    }

    # Attendre que l'utilisateur appuie sur une touche avant de continuer
    Read-Host -Prompt "Appuyez sur Entrée pour continuer..."
}
